{
  "name": "taro-define-config",
  "version": "0.8.0",
  "packageManager": "pnpm@9.12.1",
  "description": "Provide a defineConfig function for tarojs config",
  "keywords": [
    "tarojs",
    "taro",
    "typescript",
    "config",
    "define-config",
    "taro-plugin"
  ],
  "license": "MIT",
  "author": {
    "name": "ntnyq",
    "email": "ntnyq13@gmail.com"
  },
  "homepage": "https://github.com/ntnyq/taro-define-config#readme",
  "bugs": {
    "url": "https://github.com/ntnyq/taro-define-config/issues"
  },
  "repository": "ntnyq/taro-define-config",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "lint": "eslint .",
    "prepare": "husky",
    "release": "run-s build release:check release:publish",
    "release:check": "run-s lint typecheck",
    "release:publish": "bumpp && pnpm publish",
    "test": "vitest --typecheck",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@jridgewell/source-map": "^0.3.6",
    "@types/html-minifier-terser": "^7.0.2",
    "@types/node": "^22.7.5",
    "rollup": "^4.24.0",
    "tapable": "^2.2.1",
    "vite": "^5.4.8",
    "webpack": "^5.95.0",
    "webpack-chain": "^6.5.1",
    "webpack-dev-server": "^5.1.0"
  },
  "devDependencies": {
    "@ntnyq/eslint-config": "^3.0.0-beta.20",
    "@ntnyq/prettier-config": "^1.21.3",
    "bumpp": "^9.7.1",
    "eslint": "^9.12.0",
    "husky": "^9.1.6",
    "nano-staged": "^0.8.0",
    "npm-run-all2": "^6.2.3",
    "prettier": "^3.3.3",
    "taro-define-config": "workspace:*",
    "tsup": "^8.3.0",
    "typescript": "^5.6.3",
    "vitest": "^2.1.2"
  },
  "prettier": "@ntnyq/prettier-config",
  "nano-staged": {
    "*.{js,ts,cjs,mjs,json,md,yml,yaml}": "eslint --fix"
  }
}
