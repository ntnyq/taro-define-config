{
  "name": "taro-define-config",
  "version": "0.4.3",
  "packageManager": "pnpm@8.11.0",
  "description": "Provide a defineConfig function for tarojs config",
  "keywords": [
    "tarojs",
    "taro",
    "typescript",
    "config",
    "define-config",
    "taro-plugin"
  ],
  "license": "MIT",
  "author": {
    "name": "ntnyq",
    "email": "ntnyq13@gmail.com"
  },
  "homepage": "https://github.com/ntnyq/taro-define-config#readme",
  "bugs": {
    "url": "https://github.com/ntnyq/taro-define-config/issues"
  },
  "repository": "ntnyq/taro-define-config",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "lint": "eslint .",
    "prepare": "husky install",
    "release": "run-s build release:check release:publish",
    "release:check": "run-s lint typecheck",
    "release:publish": "bumpp && pnpm publish",
    "test": "vitest --typecheck",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@jridgewell/source-map": "^0.3.5",
    "@types/html-minifier-terser": "5.1.2",
    "@types/tapable": "^1.0.12",
    "@types/webpack": "^4.41.38"
  },
  "devDependencies": {
    "@ntnyq/eslint-config": "^1.19.0",
    "@ntnyq/prettier-config": "^1.19.0",
    "bumpp": "^9.2.0",
    "eslint": "^8.54.0",
    "husky": "^8.0.3",
    "nano-staged": "^0.8.0",
    "npm-run-all": "^4.1.5",
    "pnpm": "^8.11.0",
    "prettier": "^3.1.0",
    "taro-define-config": "workspace:*",
    "taze": "^0.13.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.2",
    "vitest": "^1.0.0-beta.6"
  },
  "prettier": "@ntnyq/prettier-config",
  "nano-staged": {
    "*.{js,ts,mjs,json,md,yml,yaml}": "eslint --fix"
  }
}
